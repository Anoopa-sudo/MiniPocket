<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Directory_listing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/backBt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:backgroundTint="@color/teal_700"
                android:text="Back"
                android:textColor="#fff" />
            <EditText
                android:id="@+id/searcht"
                android:layout_width="180dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:hint="Enter Service type"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/searchBt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:backgroundTint="@color/red_app"
                android:drawableBottom="@drawable/ic_baseline_search_24" />
            android:textColor="#fff" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp">

            <TextView
                android:id="@+id/searchKeyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Search Results"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/resultt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="View results here"
                android:textAlignment="center"
                android:textColor="@color/red_app"
                android:textSize="15dp"
                android:textStyle="italic" />

            <ListView
                android:id="@+id/directoryList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="#fff"
                android:padding="0dp"
                android:divider="#fff"
                android:dividerHeight="10dp"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>